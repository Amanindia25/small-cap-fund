{
  "name": "small-cap-fund-scraper",
  "version": "1.0.0",
  "description": "Scrape small cap mutual fund data from Moneycontrol",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently -n api,scraper -c blue,magenta \"npm:dev:api\" \"npm:dev:scrape\"",
    "dev:api": "ts-node src/api/server.ts",
    "dev:scrape": "wait-on http://localhost:5000/api/health && ts-node src/index.ts",
    "scrape": "npm run build && npm start",
    "api": "ts-node src/api/server.ts",
    "api-test": "set TEST_MODE=true && ts-node src/api/server.ts",
    "api-build": "npm run build && node dist/api/server.js",
    "backfill:yesterday": "ts-node src/scripts/backfill-yesterday.ts",
    "mutate:snapshot": "ts-node src/scripts/mutate-snapshot.ts",
    "test:stock-scraping": "ts-node src/scripts/test-stock-scraping.ts",
    "scrape:stocks": "ts-node src/scripts/run-stock-scraping.ts"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.10.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.8.0",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^8.0.5"
  },
  "keywords": [
    "scraping",
    "mutual-funds",
    "moneycontrol",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
